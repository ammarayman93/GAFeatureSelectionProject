<div class="container my-3">
    <div class="row mt-5">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 wow slideInUp" data-wow-delay="0.3s">
            <form action="/addCustomer" method="post">
                <div class="row g-3">
                    <div class="col-12">
                        <h3 class="text-success">إضافة مراجع:</h3>
                         
                        <h4 class="text-success">{{message}}</h4>
                    </div>
                    <div class="col-6">
                        <input type="text" name="name" class="form-control  px-4" placeholder="اسم المراجع الرباعي"
                            style="height: 55px;">
                    </div>
                    <div class="col-6">
                        <input type="text" name="nationalID" class="form-control  px-4" placeholder="رقم الهوية الوطني"
                            style="height: 55px;">
                    </div>
                    <div class="col-6">
                        <input type="text" name="phone" class="form-control  px-4" placeholder="رقم الهاتف"
                            style="height: 55px;">
                    </div>
                    <div class="col-6">
                        <input type="text" name="phone2" class="form-control  px-4" placeholder="رقم الهاتف البديل"
                            style="height: 55px;">
                    </div>
                    <div class="col-6">
                        <textarea class="form-control  px-4 py-3" rows="2" name="address" placeholder="العنوان"></textarea>
                    </div>

                    
                    <div class="col-6">
                        <button class="btn btn-success w-100 py-3" type="submit">إضافة</button>
                    </div>
                </div>
            </form>
        </div>


    </div>
</div>