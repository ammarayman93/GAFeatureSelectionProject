<div class="container my-3">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 wow slideInUp" data-wow-delay="0.3s">
            <form action="/newOrder" method="post" enctype="multipart/form-data">
                <div class="row g-3">
                    <div class="col-12">
                      <div class="d-flex mt-5" style="justify-content: space-between;">
                        <div>  <h3 class="text-success"><i class="fas fa-universal-access"></i> طلب جديد:</h3></div>
                       
                      </div>
                            <h4 class="text-info">{{message}}</h4>
                    </div>

                    <div class="col-12">
                        <label><i class="fas fa-user-check me-1"></i> المراجع:</label>
                        <select class="form-select  mb-3" name="customerId" style="height: 40px;">
                            
                            {{#each this.customers}}
                            <option value="{{this._id}}">{{this.name}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <div class="col-12">
                        <label><i class="fas fa-unlink me-1"></i> نوع الطلب:</label>
                        <select class="form-select  mb-3" name="type" style="height: 40px;">
                            <option value="شكوى">شكوى</option>
                            <option value="تسجيل جديد">تسجيل جديد</option>
                        </select>
                    </div>
                    
                    <div class="col-12">
                        <label><i class="fas fa-weight me-1"></i> حالة الطلب:</label>
                        <select class="form-select  mb-3" name="status" style="height: 40px;">
                            <option value="مفتوحة">مفتوحة</option>
                            <option value="قيد المعالجة">قيد المعالجة</option>
                            <option value="مغلقة">مغلقة</option>
                        </select>
                    </div>

                   

                    <div class="col-12">
                        <textarea class="form-control  px-4 py-2" rows="3" name="description" placeholder="تفاصيل"></textarea>
                    </div>
                    <div class="col-12">
                        <textarea class="form-control  px-4 py-2" rows="3" name="notes" placeholder="ملاحظات"></textarea>
                    </div>

                     <div class="col-12">
                        <label class="me-3">إضافة صورة لطلب:</label>
                        <label for="pick" class="btn btn-danger me-3"><i class="fas fa-cloud-upload-alt me-1"></i> تحميل ملف</label>
                        <input id="pick" type="file" name="file" class="d-none"/>
                    </div>
                    
                    <div class="col-12">
                        <button class="btn btn-success w-100 py-3" type="submit">إضافة</button>
                    </div>
                </div>
            </form>
        </div>


    </div>
</div>