<div class="container my-3">
    <div class="row">

        <div class="col-md-12 mt-3">
        
                <h3 class="py-1">الطللبات</h3>
              
       
            <hr>
            <table class="table table-bordered" style="vertical-align: middle;">
                <tr>
                    <td>صورة</td>
                  
                    <td>الطلب</td>
                    
                    <td class="text-center">إجراء</td>

                </tr>
                {{#each orders}}


                <tr>
                    <td class="text-center" style="vertical-align: middle;"><img src="images/{{this.file}}"
                            width="150" /></td>

                    <td>{{this.customer.name}}<hr>
                    الموظف: {{this.user.name}}<br>
                    النوع: {{this.type}}<br>الحالة: {{this.status}}<br>
                    تفاصيل الطلب:<br>{{this.description}}<br>ملاحظات:<br> {{this.notes}}
                    <br>التاريخ: {{this.insertD}}<br>
                    التحديث: {{this.updateD}}</td>
                    
                    <td class="text-center">
                     
                        <a href="deleteOrder/{{this._id}}">حذف</a> <br> <br>
                      
                        <a href="editOrder/{{this._id}}">تعديل</a>
         
                    </td>
                </tr>



                {{/each}}
            </table>

        </div>



    </div>
</div>